<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_height="match_parent"
    tools:context=".ui.AddPost.AddPostFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/postCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="#FFC107"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:id="@+id/postImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_round_add_circle_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <EditText
                android:id="@+id/postTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:hint="Title"
                android:inputType="textPersonName"
                android:text="Name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/postDescription"
                android:layout_width="223dp"
                android:layout_height="88dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="8dp"
                android:ems="10"
                android:text="sfs"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/postTitle" />

            <Button
                android:id="@+id/postButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="post"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteX="260dp"
                tools:layout_editor_absoluteY="217dp" />

            <TextView
                android:id="@+id/quantity_Tv"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:layout_marginLeft="16dp"
                android:text="Quantity"
                app:layout_constraintBottom_toTopOf="@id/postButton"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/note"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/quantity_kg"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:text="Kg"
                app:layout_constraintBottom_toTopOf="@id/postButton"
                app:layout_constraintLeft_toRightOf="@id/quantity_Et"
                app:layout_constraintTop_toBottomOf="@id/note" />

            <TextView
                android:id="@+id/note"
                app:layout_constraintTop_toBottomOf="@+id/postDescription"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Less than 1Kg food is not accepted"
                tools:layout_editor_absoluteX="158dp"
                tools:layout_editor_absoluteY="152dp" />

            <EditText
                android:id="@+id/quantity_Et"
                android:layout_width="38dp"
                android:layout_height="37dp"
                android:textSize="14sp"
                android:text="20"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@id/postButton"
                app:layout_constraintLeft_toRightOf="@+id/quantity_Tv"

                app:layout_constraintTop_toBottomOf="@id/note" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

